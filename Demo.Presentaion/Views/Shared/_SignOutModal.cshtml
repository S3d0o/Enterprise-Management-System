<!-- Sign Out Confirmation Modal -->
<div class="modal fade" id="signOutModal" tabindex="-1" aria-labelledby="signOutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4">
                <h5 class="modal-title" id="signOutModalLabel">
                    <i class="bi bi-box-arrow-right me-2"></i> Confirm Sign Out
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <p class="fs-5 text-muted mb-3">Are you sure you want to sign out?</p>
                <i class="bi bi-question-circle text-danger display-4"></i>
            </div>
            <div class="modal-footer justify-content-center border-0 pb-4">
                <button type="button" class="btn btn-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="btn btn-danger px-4 rounded-pill">Sign Out</button>
                </form>
            </div>
        </div>
    </div>
</div>