@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_ToastPartialView"></partial>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(function (toastEl) {
                const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
            });
        });
    </script>
}

<h1 class="my-5 w-50 mx-auto text-center fw-bold border-bottom pb-3">All Employees</h1>

<div class="container mb-4">
    <form class="row justify-content-center align-items-center mb-4" asp-action="Index" method="get">
        <!-- Search -->
        <div class="col-md-6">
            <div class="input-group shadow rounded-pill overflow-hidden">
                <input class="form-control border-0 px-3"
                       type="text"
                       id="searchBox"
                       name="EmployeeSearchName"
                       placeholder="Search By Employee..."
                       aria-label="Search"
                       style="height: 50px; font-size: 1.1rem;" />
                <button class="btn btn-primary px-3" type="submit" style="height: 50px;">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- Create Button -->
        <div class="col-md-auto">
            <a class="btn btn-lg text-white px-4"
               style="background: linear-gradient(to right, #4a69bd, #1e3799);
                      border: none;
                      font-size: 16px;
                      font-weight: 500;
                      border-radius: 8px;
                      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
                      height: 50px; display: flex; align-items: center; justify-content: center;"
               onmouseover="this.style.background='linear-gradient(to right, #3c6382, #0c2461)'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0px 6px 10px rgba(0, 0, 0, 0.3)';"
               onmouseout="this.style.background='linear-gradient(to right, #4a69bd, #1e3799)'; this.style.transform='translateY(0px)'; this.style.boxShadow='0px 4px 6px rgba(0, 0, 0, 0.2)';"
               onmousedown="this.style.transform='translateY(1px)'; this.style.boxShadow='0px 2px 5px rgba(0, 0, 0, 0.2)';"
               onmouseup="this.style.transform='translateY(-2px)'; this.style.boxShadow='0px 6px 10px rgba(0, 0, 0, 0.3)';"
               asp-controller="Employee" asp-action="Create">
                <i class="fas fa-user-plus"></i>
            </a>
        </div>
    </form>
</div>

<div class="container mt-3" style="min-height: 500px;">
    @if (Model?.Any() ?? false)
    {
        <div class="table-responsive shadow rounded">
            <table class="table table-hover align-middle mb-0 w-100 text-center">
                <thead class="table-dark">
                    <tr>
                        <th style="width:60px;">Image</th>
                        <th style="width:200px;">Name</th>
                        <th style="width:220px;">Email</th>
                        <th style="width:180px;">Type</th>
                        <th style="width:80px;">Age</th>
                        <th style="width:150px;">Department</th>
                        <th style="width:120px;">Salary</th>
                        <th style="width:90px;">Active</th>
                        <th style="width:100px;">Gender</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>
                                <img class="rounded-circle" width="40" height="40"
                                     src="~/Attachments/Images/@(!string.IsNullOrEmpty(employee.ImageName) ? employee.ImageName : "user.png")"
                                     alt="Employee Image" />
                            </td>
                            <td>@employee.Name</td>
                            <td>@employee.Email</td>
                            <td>@employee.EmployeeType</td>
                            <td>@employee.Age</td>
                            <td>@(!string.IsNullOrEmpty(employee.Department) ? employee.Department : "No Department")</td>
                            <td>@Html.DisplayFor(e => employee.Salary)</td>
                            <td>
                                <i class="fa @(employee.IsActive ? "fa-solid fa-circle-check text-success" : "fa-solid fa-circle-xmark text-danger")"></i>
                            </td>
                            <td>@employee.Gender</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <partial name="_ButtonsPartialView"
                                             model="@employee.Id.ToString()"
                                             view-data='new ViewDataDictionary(ViewData) {
                                                                                   { "EntityType", "Employee" },
                                                                                   { "Controller", "Employee" },
                                                                                   { "Name", employee.Name }
                                                                               }' />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h2>No Employees Found</h2>
        </div>
    }
</div>
