@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main">
    <section class="sign-in">
        <div class="container mt">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/AuthImages/reset-password.png" alt="Reset Pass image"></figure>
                </div>
                <div class="signin-form mt-5">
                    <h3 class="form-title">@ViewData["Title"]</h3>
                    <form method="POST" class="register-form mt-4" asp-action="ResetPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NewPassword"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="NewPassword" placeholder="New password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmNewPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="ConfirmNewPassword" placeholder="Confirm your new password" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="submit" asp-action="ResetPassword" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>




