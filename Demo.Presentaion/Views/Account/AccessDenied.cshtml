@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex flex-column justify-content-center align-items-center vh-100 text-center">
    <div class="shadow-lg p-5 rounded-4" style="max-width: 600px; background-color: #fff;">
        <i class="bi bi-shield-lock text-danger" style="font-size: 5rem;"></i>
        <h1 class="mt-4 fw-bold text-danger">Access Denied</h1>
        <p class="text-muted mt-3 fs-5">
            Sorry, you don’t have permission to view this page.<br />
            If you think this is a mistake, please contact your administrator.
        </p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-4 px-4 rounded-pill">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .container i {
        animation: float 2s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
</style>
