@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main">
    <section class="sign-in">
        <div class="container mt">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/AuthImages/forgot-password-image.jpg" alt="Forget Pass image"></figure>
                </div>
                <div class="signin-form mt-5" >
                    <h3 class="form-title">@ViewData["Title"]</h3>
                    <form method="POST" class="register-form mt-4" asp-action="" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" placeholder=" Your Email" />
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="submit" asp-action="SendResetPasswordUrl" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>



