@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Details";
}

    <h1 class="my-4 mx-auto text-center fw-bold border-bottom pb-3" style="width: 50%;">Details of @Model.Name Department</h1>
    <br />
<div class="form-container">

    <ul class="nav nav-tabs" id="departmentTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <!-- General Tab Content -->
        <div class="tab-pane fade show active p-4" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="form-row">
                <div class="form-group col-6">
                    <label class="form-label" asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" readonly />
                </div>
                <div class="form-group col-6">
                    <label class="form-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label" asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label" asp-for="CreatedAt"></label>
                    <input asp-for="CreatedAt" class="form-control" readonly />
                </div>
            </div>
            <!-- Completed Image Preview Section -->
        </div>

        <!-- Administration Tab Content -->
        <div class="tab-pane fade p-4" id="administration" role="tabpanel" aria-labelledby="administration-tab">
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label" asp-for="CreatedBy"></label>
                    <input asp-for="CreatedBy" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label">CreatedOn</label>
                    <input asp-for="CreatedAt" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label" asp-for="ModifiedBy"></label>
                    <input asp-for="ModifiedBy" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="form-label" asp-for="ModifiedAt"></label>
                    <input asp-for="ModifiedAt" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
    </div>
</div>