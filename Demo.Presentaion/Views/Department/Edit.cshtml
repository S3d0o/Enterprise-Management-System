@using Demo.Presentaion.ViewModels.Department
@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="my-5 w-50 mx-auto text-center fw-bold border-bottom pb-3">Edit @Model.Name Department</h1>

    <form method="post" asp-controller="Department" asp-action="Edit" class="col-8">
        @*Render Partial*@
        <partial name="PartialViews/_CreateEditPartialView" model="Model" ></partial>
    </form>
</div>
@section ValidationScripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
