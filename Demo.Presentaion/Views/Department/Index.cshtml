
@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">Departmet</h1>
<br />
<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create new Department</a>
@if (Model.Any())
{
    <table class="table table-striped table-hover mt-2 ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.DeptCode)</th>
                <th>@Html.DisplayNameFor(d=>d.DeptName)</th>
                <th>@Html.DisplayNameFor(d => d.DeptDescription)</th>
                <th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td> @department.DeptCode </td>
                    <td> @department.DeptName </td>
                    <td> @department.DeptDescription </td>
                    <td> @department.DateOfCreation </td>
                    <td><a class="btn btn-primary " asp-controller="Department" asp-action="Details" asp-route-Id="@department.DeptId"><i class="fas fa-eye"></i>Details</a></td>
                    <td><a class="btn btn-success " asp-controller="Department" asp-action="Update" asp-route-Id="@department.DeptId"><i class="fas fa-edit"></i>Update</a></td>
                    <td><a class="btn btn-danger " asp-controller="Department" asp-action="Delete" asp-route-Id="@department.DeptId"><i class="fas fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
 //No departments found
 <div class="alert-info mt-3 p-3">
        <h2>No departments found !!</h2>
 </div>
}