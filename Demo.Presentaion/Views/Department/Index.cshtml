@using Demo.BusinessLogic.DTOS.DepartmentDTOS

@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
    // DepartmentDto departmentDto = ViewData["message"] as DepartmentDto;
}

