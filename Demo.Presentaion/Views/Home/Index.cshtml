@{
    ViewData["Title"] = "Project Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 text-primary">Demo Management System</h1>
        <p class="lead text-muted">
            Full-stack MVC project built with a <strong>backend-first approach</strong> using ASP.NET Core, C#, and Entity Framework.
        </p>
    </div>

    <!-- Quick Access Cards -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Users</h5>
                    <p class="text-muted small mb-4">Manage system users and their roles</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-building-fill display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Departments</h5>
                    <p class="text-muted small mb-4">Handle organizational structure</p>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-success rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-person-badge-fill display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">Employees</h5>
                    <p class="text-muted small mb-4">CRUD operations on employees</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-warning rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-shield-lock-fill display-4 text-danger mb-3"></i>
                    <h5 class="fw-bold">Roles</h5>
                    <p class="text-muted small mb-4">Manage access and permissions</p>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-outline-danger rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Backend Overview -->
    <div class="mt-5 pt-5 border-top">
        <h2 class="fw-bold text-center mb-4">🧩 Backend Architecture</h2>
        <div class="text-center mx-auto" style="max-width: 900px;">
            <p class="lead text-muted">
                The project follows a <strong>layered architecture</strong> with a clean separation between:
            </p>
            <ul class="list-group list-group-flush text-start mx-auto" style="max-width: 700px;">
                <li class="list-group-item"><strong>Presentation Layer</strong> — Handles UI & controllers (Views, HTML, JS, Bootstrap)</li>
                <li class="list-group-item"><strong>Business Logic Layer</strong> — Contains services, mappings, and validation logic</li>
                <li class="list-group-item"><strong>Data Access Layer</strong> — Manages repositories, DbContext, and EF Core queries</li>
                <li class="list-group-item"><strong>Identity Integration</strong> — Uses ASP.NET Core Identity for roles & authentication</li>
            </ul>
        </div>
    </div>

    <!-- Technologies -->
    <div class="mt-5 pt-5 border-top">
        <h2 class="fw-bold text-center mb-4">⚙️ Technologies Used</h2>
        <div class="row justify-content-center text-center">
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-filetype-cs display-5 text-primary"></i><p class="mt-2 fw-semibold">C#</p></div>
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-globe2 display-5 text-success"></i><p class="mt-2 fw-semibold">ASP.NET MVC</p></div>
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-database-fill-gear display-5 text-warning"></i><p class="mt-2 fw-semibold">EF Core</p></div>
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-server display-5 text-danger"></i><p class="mt-2 fw-semibold">SQL Server</p></div>
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-bootstrap-fill display-5 text-purple"></i><p class="mt-2 fw-semibold">Bootstrap 5</p></div>
            <div class="col-md-2 col-6 mb-3"><i class="bi bi-braces display-5 text-dark"></i><p class="mt-2 fw-semibold">HTML, CSS, JS</p></div>
        </div>
    </div>

    <!-- Features -->
    <div class="mt-5 pt-5 border-top">
        <h2 class="fw-bold text-center mb-4">🚀 Key Features</h2>
        <div class="row justify-content-center text-center">
            <div class="col-md-3 col-6 mb-4"><i class="bi bi-person-check-fill display-5 text-primary"></i><p class="fw-semibold mt-2">Role-Based Access</p></div>
            <div class="col-md-3 col-6 mb-4"><i class="bi bi-building-fill-check display-5 text-success"></i><p class="fw-semibold mt-2">Dynamic Departments</p></div>
            <div class="col-md-3 col-6 mb-4"><i class="bi bi-people-fill display-5 text-warning"></i><p class="fw-semibold mt-2">Employee CRUD</p></div>
            <div class="col-md-3 col-6 mb-4"><i class="bi bi-code-square display-5 text-danger"></i><p class="fw-semibold mt-2">Reusable Partial Views</p></div>
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-5 text-muted border-top pt-4">
        <p class="small mb-1">&copy; @DateTime.Now.Year — <strong>Demo Management System</strong></p>
        <p class="small">Developed by <strong>Saad Mohamed</strong> | Backend Developer</p>
        <div>
            <a href="https://github.com/S3d0o" target="_blank" class="me-3 text-dark"><i class="bi bi-github"></i></a>
            <a href="https://www.linkedin.com/in/saad-mohamed-li" target="_blank" class="me-3 text-primary"><i class="bi bi-linkedin"></i></a>
            <a href="https://www.instagram.com/s3d.xn" target="_blank" class="text-danger"><i class="bi bi-instagram"></i></a>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease-in-out;
        border-radius: 16px;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .text-purple {
        color: #7952b3 !important;
    }

    ul.list-group li {
        background: transparent;
        border: none;
    }
</style>
