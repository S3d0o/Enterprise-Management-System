@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Project Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 text-primary">Demo Management System</h1>
        <p class="lead text-muted">A simple and elegant management dashboard for Users, Departments, Employees, and Roles.</p>
    </div>

    <!-- Overview Cards -->
    <div class="row g-4 justify-content-center">
        <!-- Users -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Users</h5>
                    <p class="text-muted small mb-4">Manage user accounts and roles</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Departments -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-building-fill display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Departments</h5>
                    <p class="text-muted small mb-4">View and manage departments</p>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-success rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Employees -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-person-badge-fill display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">Employees</h5>
                    <p class="text-muted small mb-4">Manage employee records</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-warning rounded-pill px-4">View</a>
                </div>
            </div>
        </div>

        <!-- Roles -->
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-lg border-0 text-center h-100 hover-card">
                <div class="card-body py-5">
                    <i class="bi bi-shield-lock-fill display-4 text-danger mb-3"></i>
                    <h5 class="fw-bold">Roles</h5>
                    <p class="text-muted small mb-4">View and edit user roles</p>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-outline-danger rounded-pill px-4">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Note -->
    <div class="text-center mt-5 text-muted">
        <p class="small mb-0">&copy; @DateTime.Now.Year Demo Management System — Built with ❤️ using ASP.NET MVC</p>
    </div>
</div>

<!-- Project Overview Section -->
<div class="mt-5 pt-4 border-top">
    <h2 class="fw-bold text-center mb-4">📘 Project Overview</h2>
    <div class="text-center mx-auto" style="max-width: 800px;">
        <p class="lead text-muted">
            <strong>Demo Management System</strong> is a web-based application built using ASP.NET Core MVC
            that helps manage Employees, Departments, Users, and Roles efficiently.
            It demonstrates the implementation of CRUD operations, clean architecture with
            layered separation (Business Logic, Data Access, UI), and reusable partial views.
        </p>
    </div>
</div>

<!-- Technologies Section -->
<div class="mt-5 pt-4 border-top">
    <h2 class="fw-bold text-center mb-4">⚙️ Technologies Used</h2>
    <div class="row justify-content-center text-center">
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-filetype-cs display-5 text-primary"></i>
            <p class="mt-2 fw-semibold">C#</p>
        </div>
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-globe2 display-5 text-success"></i>
            <p class="mt-2 fw-semibold">ASP.NET Core MVC</p>
        </div>
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-database-fill-gear display-5 text-warning"></i>
            <p class="mt-2 fw-semibold">Entity Framework</p>
        </div>
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-server display-5 text-danger"></i>
            <p class="mt-2 fw-semibold">SQL Server</p>
        </div>
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-bootstrap-fill display-5 text-purple"></i>
            <p class="mt-2 fw-semibold">Bootstrap 5</p>
        </div>
        <div class="col-md-2 col-6 mb-3">
            <i class="bi bi-git display-5 text-dark"></i>
            <p class="mt-2 fw-semibold">Git & GitHub</p>
        </div>
    </div>
</div>


<style>
    .hover-card {
        transition: all 0.3s ease-in-out;
        border-radius: 16px;
    }

        .hover-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .text-purple {
        color: #7952b3 !important;
    }
</style>
